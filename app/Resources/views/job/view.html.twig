{% extends "base.html.twig" %}

{% block title %}{{ job.title }}{% endblock %}

{% block container %}
    <div class="col-xs-12 col-sm-12">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="pull-right">
                        <a href="{{ path('app_job_edit', {'id': job.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ path('app_job_delete', {'id': job.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </div>
                    <p class="panel-title" style="font-size: x-large; text-align: center">{{ job.title }}</p>
                </div>
                <div class="panel-body">
                    <div class="col-xs-6 col-lg-6">
                        <div class="panel panel-default">
                            {#<div class="panel-heading">#}
                                {#<p class="panel-title" style="font-size: large; text-align: center">Summary</p>#}
                            {#</div>#}

                            {#<div class="alert alert-info" role="alert" style="text-align: center; font-size: large">Summary</div>#}
                            <div class="panel-body">
                                <p style="font-size: 20px; text-align: center">Summary</p>
                                <hr>
                                <p style="font-size: 17px">Salary: {{ job.salary|salary }}</p>
                                <p style="font-size: 17px">Company: {{ job.company }}</p>
                                <p style="font-size: 17px">City: {{ job.city }}</p>
                                <p style="font-size: 17px">Employment Type: {{ job.employment }}</p>
                                <p style="font-size: 17px">Work experience: {{ job.experience }}</p>
                                <p style="font-size: 17px">Education: {{ job.education }}</p>
                                <hr>
                                <table class="table table-hover">
                                    <caption>Contact information</caption>
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Phone</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>{{ job.name }}</td>
                                            <td>{{ job.phone }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!--/.col-xs-6 col-lg-6-->
                    <div class="col-xs-6 col-lg-6">
                        <div class="panel panel-default">
                            {#<div class="panel-heading">#}
                                {#<p class="panel-title" style="font-size: large; text-align: center">Job description</p>#}
                            {#</div>#}
                            <div class="panel-body">
                                <p style="font-size: 20px; text-align: center">Job description</p>
                                <hr>
                                <p style="font-size: 17px">{{ job.description }}</p>
                            </div>
                        </div>
                    </div><!--/.col-xs-6 col-lg-6-->
                    <div class="pull-right">
                        <p class="text-muted">Created: {{ job.createdAt|date }}</p>
                    </div>
                </div>
            </div>
        </div><!--/row-->
    </div><!--/.col-xs-12.col-sm-12-->
{% endblock %}

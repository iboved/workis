{% extends "base.html.twig" %}

{% block title %}{{ job.title }}{% endblock %}

{% block container %}
    <div class="col-xs-12 col-sm-12">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="pull-right">
                        <a href="{{ path('app_job_edit', {'id': job.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ path('app_job_delete', {'id': job.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </div>
                    <p class="panel-title" style="font-size: x-large; text-align: center">{{ job.title }}</p>
                </div>
                <div class="panel-body">
                    <div class="col-xs-6 col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p style="font-size: 20px; text-align: center">{{ 'job.summary'|trans }}</p>
                                <hr>
                                <p style="font-size: 17px">{{ 'job.salary'|trans }}: {{ job.salary|salary }}</p>
                                <p style="font-size: 17px">{{ 'job.company'|trans }}: {{ job.company }}</p>
                                <p style="font-size: 17px">{{ 'job.city'|trans }}: {{ job.city }}</p>
                                <p style="font-size: 17px">{{ 'job.employment'|trans }}: {{ job.employment|trans }}</p>
                                <p style="font-size: 17px">{{ 'job.experience'|trans }}: {{ job.experience }}</p>
                                <p style="font-size: 17px">{{ 'job.education'|trans }}: {{ job.education|trans }}</p>
                                <hr>
                                <table class="table table-hover">
                                    <caption>{{ 'job.contact'|trans }}</caption>
                                    <thead>
                                    <tr>
                                        <th>{{ 'job.name'|trans }}</th>
                                        <th>{{ 'job.phone'|trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>{{ job.name }}</td>
                                            <td>{{ job.phone }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!--/.col-xs-6 col-lg-6-->
                    <div class="col-xs-6 col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p style="font-size: 20px; text-align: center">{{ 'job.description'|trans }}</p>
                                <hr>
                                <p style="font-size: 17px">{{ job.description }}</p>
                            </div>
                        </div>
                    </div><!--/.col-xs-6 col-lg-6-->
                    <div class="pull-right">
                        <p class="text-muted">{{ 'job.created'|trans }}: {{ job.createdAt|date }}</p>
                    </div>
                </div>
            </div>
        </div><!--/row-->
    </div><!--/.col-xs-12.col-sm-12-->
{% endblock %}

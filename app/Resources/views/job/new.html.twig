{% extends "base.html.twig" %}

{% block title %} {{ 'title.new_job'|trans }} {% endblock %}

{% block container %}
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <legend>{{ 'job.new.new_job'|trans }}</legend>
    {{ form_row(form.title) }}
    {{ form_row(form.company) }}
    {{ form_row(form.city) }}
    {{ form_row(form.salary) }}
    {{ form_row(form.employment) }}
    {{ form_row(form.education) }}
    {{ form_row(form.experience) }}
    {{ form_row(form.category) }}
    {{ form_row(form.description) }}
    <legend>{{ 'job.contact'|trans }}</legend>
    {{ form_row(form.name) }}
    {{ form_row(form.phone) }}

    {{ form_end(form) }}
{% endblock %}

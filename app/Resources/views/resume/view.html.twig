{% extends "base.html.twig" %}

{% block title %}{{ resume.jobTitle }}{% endblock %}

{% block container %}
    <div class="col-xs-12 col-sm-12">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="pull-right">
                        <a href="{{ path('app_resume_edit', {'id': resume.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="{{ path('app_resume_delete', {'id': resume.id}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                    </div>
                    <p class="panel-title" style="font-size: x-large; text-align: center">{{ resume.jobTitle }}</p>
                </div>
                <div class="panel-body">
                    <div class="col-xs-6 col-lg-6">
                        <div class="panel panel-default">
                            {#<div class="panel-heading">#}
                            {#<p class="panel-title" style="font-size: large; text-align: center">Summary</p>#}
                            {#</div>#}

                            {#<div class="alert alert-info" role="alert" style="text-align: center; font-size: large">Summary</div>#}
                            <div class="panel-body">
                                <p style="font-size: 20px; text-align: center">Summary</p>
                                <hr>
                                <p style="font-size: 17px">Full name: {{ resume.name }} ({{ resume.birthday|date('d.m.Y') }})</p>
                                <p style="font-size: 17px">City: {{ resume.city }}</p>
                                <p style="font-size: 17px">Education: {{ resume.education }}</p>
                                <p style="font-size: 17px">Work experience: {{ resume.experience }}</p>
                                <p style="font-size: 17px">Employment Type: {{ resume.employment }}</p>
                                <hr>
                                <table class="table table-hover">
                                    <caption>Contact information</caption>
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>{{ resume.name }}</td>
                                        <td>{{ resume.email }}</td>
                                        <td>{{ resume.phone }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div><!--/.col-xs-6 col-lg-6-->
                    <div class="col-xs-6 col-lg-6">
                        <div class="panel panel-default">
                            {#<div class="panel-heading">#}
                            {#<p class="panel-title" style="font-size: large; text-align: center">Job description</p>#}
                            {#</div>#}
                            <div class="panel-body">
                                <p style="font-size: 20px; text-align: center">Skills</p>
                                <hr>
                                <p style="font-size: 17px">{{ resume.skills }}</p>
                            </div>
                        </div>
                    </div><!--/.col-xs-6 col-lg-6-->
                    <div class="pull-right">
                        <p class="text-muted">Created: {{ resume.createdAt|date }}</p>
                    </div>
                </div>
            </div>
        </div><!--/row-->
    </div><!--/.col-xs-12.col-sm-12-->
{% endblock %}
